
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product available for sale on SS Smart Haat.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the product."
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "Current selling price."
        },
        "originalPrice": {
          "type": "number",
          "description": "Price before discount."
        },
        "discountPercentage": {
          "type": "number",
          "description": "Percentage of discount offered."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the product image.",
          "format": "uri"
        },
        "category": {
          "type": "string",
          "description": "Category the product belongs to."
        },
        "showInSlider": {
          "type": "boolean",
          "description": "Whether to display this product in the home slider."
        },
        "showInFlashOffer": {
          "type": "boolean",
          "description": "Whether to display this product in the flash offer section."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "price",
        "imageUrl",
        "category"
      ]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "description": "A product category with an associated image.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the category."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the category image.",
          "format": "uri"
        }
      },
      "required": ["name", "imageUrl"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Customer purchase order information.",
      "properties": {
        "customerName": { "type": "string" },
        "customerPhone": { "type": "string" },
        "customerAddress": { "type": "string" },
        "productId": { "type": "string" },
        "productName": { "type": "string" },
        "productPrice": { "type": "number" },
        "status": { "type": "string", "enum": ["PENDING", "CONFIRMED", "SHIPPED", "DELIVERED", "CANCELLED"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["customerName", "customerPhone", "customerAddress", "productId", "status"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/Product"
      },
      "description": "Stores product information."
    },
    "/categories/{categoryId}": {
      "schema": {
        "$ref": "#/backend/entities/Category"
      },
      "description": "Stores product categories."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/Order"
      },
      "description": "Stores customer orders."
    }
  }
}
