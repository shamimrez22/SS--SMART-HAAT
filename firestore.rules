
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // EMERGENCY FORCE REDEPLOY ID: 20240524_ULTIMATE_DEVELOPMENT_ACCESS_V9
    // This provides absolute open access to all collections to prevent "Missing or insufficient permissions" errors.
    match /{document=**} {
      allow read, write: if true;
    }

    match /orders/{orderId} {
      allow read, write: if true;
    }

    match /products/{productId} {
      allow read, write: if true;
    }

    match /categories/{categoryId} {
      allow read, write: if true;
    }

    match /settings/{settingId} {
      allow read, write: if true;
    }

    match /loginStats/{date} {
      allow read, write: if true;
    }
  }
}
