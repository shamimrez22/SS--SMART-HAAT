
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // CRITICAL EMERGENCY REDEPLOY ID: 20240523_GLOBAL_RESET_V1009
    // Force deployment of universal access rules to resolve persistent "Permission Denied" errors.

    // UNIVERSAL ACCESS GRANTED: Allows all read/write operations for development and MVP.
    // This is the most permissive rule to ensure no "Permission Denied" errors occur for any user.
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Explicit rules for all collections to eliminate any ambiguity.
    match /products/{productId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /categories/{categoryId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /orders/{orderId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /settings/{settingId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /loginStats/{date} {
      allow get, list, create, update, delete: if true;
    }
  }
}
