
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // EMERGENCY FORCE REDEPLOY ID: 20240523_ULTIMATE_ACCESS_FIX_V7
    // This override ensures that even unauthenticated users can access the data during development.
    match /{document=**} {
      allow read, write: if true;
    }

    // Explicitly allowing orders collection for absolute certainty
    match /orders/{orderId} {
      allow read, write: if true;
    }

    match /products/{productId} {
      allow read, write: if true;
    }

    match /categories/{categoryId} {
      allow read, write: if true;
    }

    match /settings/{settingId} {
      allow read, write: if true;
    }

    match /loginStats/{date} {
      allow read, write: if true;
    }
  }
}
