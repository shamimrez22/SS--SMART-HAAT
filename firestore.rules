
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // CRITICAL EMERGENCY REDEPLOY ID: 20240523_GLOBAL_RESET_V1001
    // Unique ID updated to force an immediate re-evaluation and deployment of rules.

    // UNIVERSAL ACCESS GRANTED: Allows all read/write operations for development and MVP.
    // This is the most permissive rule to ensure no "Permission Denied" errors occur.
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Explicit rules for all collections to eliminate any ambiguity.
    match /products/{productId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /categories/{categoryId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /orders/{orderId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /settings/{settingId} {
      allow get, list, create, update, delete: if true;
    }
    
    match /loginStats/{date} {
      allow get, list, create, update, delete: if true;
    }
  }
}
