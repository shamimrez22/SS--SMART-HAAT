
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // UNIVERSAL ACCESS - Allows any user to perform any operation on any document.
    // This resolves recurring "Permission Denied" errors during development.
    match /{path=**} {
      allow read, write: if true;
    }

    // Explicit definitions for better clarity and deployment trigger
    match /products/{productId} {
      allow get, list, create, update, delete: if true;
    }

    match /categories/{categoryId} {
      allow get, list, create, update, delete: if true;
    }

    match /orders/{orderId} {
      allow get, list, create, update, delete: if true;
    }

    match /settings/{settingId} {
      allow get, list, create, update, delete: if true;
    }

    match /loginStats/{date} {
      allow get, list, create, update, delete: if true;
    }
  }
}
