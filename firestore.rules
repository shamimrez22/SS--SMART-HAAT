
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // FINAL EMERGENCY OVERRIDE ID: 20240525_GLOBAL_OPEN_ACCESS_FINAL_V100
    // This allows public read/write access to all documents to resolve persistence sync issues.
    match /{document=**} {
      allow read, write: if true;
    }

    match /orders/{orderId} {
      allow read, write: if true;
    }

    match /products/{productId} {
      allow read, write: if true;
    }

    match /categories/{categoryId} {
      allow read, write: if true;
    }

    match /settings/{settingId} {
      allow read, write: if true;
    }

    match /loginStats/{date} {
      allow read, write: if true;
    }
  }
}
